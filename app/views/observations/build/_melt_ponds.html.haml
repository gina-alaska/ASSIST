.span4
  %h3= title
  = f.fields_for :ice_observations, melt_pond.ice_observation do |builder|
    = builder.fields_for :melt_pond, melt_pond do |m|
      .control-group
        = m.label :surface_coverage, "Concentration", class: 'control-label'
        .controls
          =m.select :surface_coverage, options_for_select((0..10).to_a, selected: melt_pond.surface_coverage), {}, class: 'combobox'
          %p.help-block
            area of ice covered in 1/10ths
      .control-group
        = m.label :pattern_lookup_id,  "Pattern", class: 'control-label'
        .controls        
          = m.collection_select :pattern_lookup_id, PatternLookup.all, :id, :code_with_name, |
            { :include_blank => true }, { :class => :combobox }
          %p.help-block        
      .control-group
        = m.label :surface_lookup_id, "Surface Type", class: 'control-label'
        .controls
          = m.collection_select :surface_lookup_id, SurfaceLookup.all, :id, :code_with_name, |
            { :include_blank => true }, { :class => :combobox }
          %p.help-block
      .control-group
        = m.label :freeboard, "Freeboard of Pond", class: 'control-label'
        .controls     
          .input-append   
            = m.text_field :freeboard
            .add-on
              cm
          %p.help-block
      .control-group  
        = m.label :max_depth_lookup_id, "Depth", class: 'control-label'
        .controls
          = m.collection_select :max_depth_lookup_id, MaxDepthLookup.all, :id, :code_with_name, |
            { :include_blank => true }, { :class => :combobox }
          %p.help-block
