%h1 New Observation

= form_for(@observation) do |f|
  #observation_form
    %ul
      %li= link_to 'General', '#general'
      %li= link_to 'Ice Observations', '#ice'
      %li= link_to 'Meteorological Observations', '#meteorological'
      %li= link_to 'Comments', '#comments'
      %li= link_to 'Preview', '#preview'
      
    #general
      %p
        = f.label :obs_datetime, 'Observation Time'
        = text_field_tag 'observation[date]'
        = text_field_tag 'observation[time]'
      %p
        = f.label :latitude
        = f.text_field :latitude
        = f.label :longitude
        = f.text_field :longitude
      %p
        = f.label :sea_ice_concentration, 'Total Sea Ice Concentration'
        = f.text_field :sea_ice_concentration
      %p
        = f.label :open_water_type_id, 'Open Water'
        = f.collection_select :open_water_type_id, OpenWaterType.all, :id, :name, |
          { :include_blank => true }, { :class => :combobox }
    #ice
    #meteorological
      %p
        = f.label :visibility_id
        = f.collection_select :visibility_id, VisibilityType.all, :id, :name, |
          { :include_blank => true }, { :class => :combobox }
      %p
        = f.label :cloud_cover, 'Cloud Cover'
        = f.text_field :cloud_cover
      %p
        = f.label :cloud_height, 'Cloud Height'
        = f.text_field :cloud_height
      %p
        = f.label :cloud_type_id, 'Cloud Type'
        = f.collection_select :cloud_type_id, CloudType.all, :id, :name, |
          { :include_blank => true }, { :class => :combobox }
        %p
        = f.label :weather_id
        = f.collection_select :weather_id, WeatherType.all, :id, :name, |
          { :include_blank => true }, { :class => :combobox }
    #comments
      =# f.label :comments, 'Comments'
      =# f.text_area :comments
    #preview
