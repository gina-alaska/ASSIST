%h1 Editing #{@observation.obs_datetime}

#observation_form.ui-tabs-vertical
  %ul
    %li= link_to 'General', '#general'
    %li= link_to 'Ice', '#ice'
    %li= link_to 'Meteorological', '#meteorological'
    %li= link_to 'Ice Observations', '#ice_observations'
    %li= link_to 'Comments', '#comments'
    %li= link_to 'Photos', '#photos'
    %li= link_to 'Preview', '#preview'


  = form_for @observation, :remote => true do |f|
    #general
      = render :partial => 'general', :locals => {:f => f}
      = f.submit "Save Report"
    #ice
      #ice_obs_buttons
        =link_to "Global", "#global", :class => 'buttontab'
        =link_to "Primary", "#primary", :class => 'buttontab'
        =link_to "Secondary","#secondary", :class => 'buttontab'
        =link_to "Tertiary","#tertiary", :class => 'buttontab'

      #global
        = render :partial => @observation.ice, :locals => {:f => f}
      #primary.hidden
        = render :partial => @observation.ice_observations.build, :locals => {:f => f}
      #secondary.hidden
        =# render :partial => @observation.ice_observations, :locals => {:f => f}
      #tertiary.hidden
        =# render :partial => @observation.ice_observations, :locals => {:f => f}
      = f.submit "Save Report"
    #meteorological
      = render :partial => @observation.meteorology, :locals => {:f => f}
      = f.submit "Save Report"
    #ice_observations
      = render :partial => @observation.ice_observations, :locals => {:f => f}
      = f.submit "Save Report"
    #comments
      = render :partial => 'comments', :locals => {:f => f}
      = f.submit "Save Report"


  #photos
    = render :partial => 'photos/upload'
    #attached_photos
      - @observation.photos.each do |p|
        = render p
  #preview
    = render 'preview'

#user_form
  = render User.new
#status_dialog
  #status_bar