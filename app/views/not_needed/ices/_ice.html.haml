.iceobs
  %h2
    Other
  = form_for [@observation,ice], :html => {:class => "autosave notify"} do |i|
    = i.hidden_field :observation_id
    = i.hidden_field :id
    .ice_column
      .half_size.total_concentration
        = i.label :total_concentration, 'Total Sea Ice Concentration %'
        = i.select :total_concentration, (0..100).step(10).to_a,{:include_blank => true, |
          :selected => ice.total_concentration.to_i},{:class => :combobox} 
    .ice_column
      .half_size
        = i.label :open_water_lookup_id, 'Open Water'
        = i.collection_select :open_water_lookup_id, OpenWaterLookup.all, :id, :code_with_name, |
          { :include_blank => true }, { :class => :combobox }
    .ice_column
      .half_size
        = i.label :thin_ice_lookup_id, "Thin Ice Type"
        = i.collection_select :thin_ice_lookup_id, IceLookup.all, :id, :code_with_name, |
          { :include_blank => true }, { :class => :combobox}
    .ice_column
      .half_size
        = i.label :thick_ice_lookup_id, "Thick Ice Type"
        = i.collection_select :thick_ice_lookup_id, IceLookup.all, :id, :code_with_name, |
          { :include_blank => true }, { :class => :combobox}